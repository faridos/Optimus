{% extends "FrontOfficeOptimusBundle::layout.html.twig" %}
{% block body %}
    <div id="wrapper">

        <div id="content" class="max">
            <div class="components">


                <h4>Résultat des recherches</h4>
                <div class="row">
                    <div class="col-md-3">

                        <ol class="breadcrumb">
                            <ul class="notifyList nav">
                                <li class=""><a href="{{path('search_user')}}" class="notifyName" role="tab"><span class="notifyIcon fa fa-users"></span> Personnes</a></li>
                                <li class=""><a href="{{path('search_events')}}" class="notifyName" role="tab"><span class="notifyIcon fa fa-trophy"></span> Evenement</a></li>
                                <li class=""><a href="{{path('search_clubs')}}" class="notifyName" role="tab"><span class="notifyIcon fa fa-users"></span> Clubs</a></li>
                            </ul>


                        </ol>

                    </div>
                    <div class="col-md-9">
                        <div class="tabsContainer">

                            <div class="tab-content ">
                                <ul class="tab-pane fade active in scrollbar" id="personne">
                                    <div class="notificationsWidget">
                                        <h5><span class="badge">{{ res.users|length}}</span> Personnes</h5>

                                        {% for user in res.users %}
                                            <div class="notification">
                                                <div class="row ">
                                                    <div class="time green">
                                                        <div class="timeBody hidden-xs">{{user.profil}}</div>
                                                        <div class="timeArrow hidden-xs"><span class="fa fa-caret-right"></span></div>
                                                        <div class="indicator"><span class="fa fa-circle-o"></span></div>
                                                        <div class="notifyArrow"><span class="fa fa-caret-left"></span></div>
                                                    </div>
                                                    <a href='{{path('show_profil',{id:user.id})}}'>
                                                        <div class="notifyContent">
                                                            <div class="notifyBody">
                                                                {% if user.path == null %}
                                                                    {% if user.sexe == 'H' %}
                                                                        <img class="avatar pull-left" src="{{asset('men.png')}}" alt="avatar">
                                                                        {% else %}
                                                                            <img class="avatar pull-left" src="{{asset('women.png')}}" alt="avatar">
                                                                              {% endif %}
                                                                    {% else %}
                                                                <img class="avatar pull-left" src="{{asset(user.WebPath)}}" alt="avatar">
                                                             {% endif %}
                                                                <div class="col-md-3 pb20"> <div class=" pull-left">
                                                                        <div class="name">Nom et Prénom<span class="label label-green visible-xs">Sportif/ Entraineur</span></div>
                                                                        <div class="message">{{user.prenom}} {{user.nom}}</div>
                                                                    </div></div>
                                                                <div class="col-md-3 pb20"><div class=" pull-left">
                                                                        <div class="name">Adresse</div>
                                                                        <div class="message">{{user.adresse}}</div>
                                                                    </div></div>

                                                                <div class="col-md-3 pb20"><div class=" pull-left">
                                                                        <div class="name">Téléphone</div>
                                                                        <div class="message">{{user.tel}}</div>
                                                                    </div></div>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                        </div>
                                                    </a>
                                                    <div class="clearfix"></div>
                                                </div></div>
                                            {% endfor %}
                                    </div>
                                </ul>

                            </div>
                        </div>
                        <div class="tabsContainer">
                            <div class="tab-content ">
                                <ul class="tab-pane fade active in  scrollbar" id="events">
                                    <div class="notificationsWidget">
                                        <h5><span class="badge">{{ res.events|length}}</span> Evenements</h5>
                                        {% for event in res.events %}
                                            <div class="notification">
                                                <div class="row ">
                                                    <div class="time green">
                                                        <div class="timeBody hidden-xs">{{event.titre}}</div>
                                                        <div class="timeArrow hidden-xs"><span class="fa fa-caret-right"></span></div>
                                                        <div class="indicator"><span class="fa fa-circle-o"></span></div>
                                                        <div class="notifyArrow"><span class="fa fa-caret-left"></span></div>
                                                    </div>
                                                    <a href='{{path('show_event',{id:event.id})}}'>
                                                        <div class="notifyContent">
                                                            <div class="notifyBody">
                                                                <div class="notifyRound notifyRound-red navIcon fa fa-trophy"></div>
                                                                <div class="col-md-3 pb20"> <div class=" pull-left">
                                                                        <div class="name"><span class=" navIcon fa fa-map-marker"></span> Lieu : {{event.lieu}}<span class="label label-green visible-xs">{{event.titre}}</span></div>
                                                                        <div class="name"><span class=" navIcon icon-users"></span> Nombre de places : {{event.nbrPlaces}}</div>
                                                                    </div></div>
                                                                <div class="col-md-3 pb20"><div class=" pull-left">
                                                                        <div class="name"><span class=" navIcon icon-clock"></span> Date début: {{event.dateDebut|date("d/m/Y h:i")}}</div>
                                                                        <div class="name"><span class=" navIcon icon-clock"></span> Date fin: {{event.dateFin|date("d/m/Y h:i")}}</div>
                                                                    </div></div>

                                                                <div class="col-md-3 pb20"><div class=" pull-left">
                                                                        <div class="name"><span class=" navIcon fa fa-money"></span> Frais: {{event.frais}} &euro;</div>

                                                                    </div></div>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                        </div>
                                                    </a>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </ul>

                            </div>
                        </div>
                        <div class="tabsContainer">
                            <div class="tab-content ">
                                <ul class="tab-pane fade active in  scrollbar" id="clubs">
                                    <div class="notificationsWidget">
                                        <h5><span class="badge">{{ res.clubs|length}}</span> Clubs</h5>

                                        {% for club in res.clubs %}
                                            <div class="notification">
                                                <div class="row ">
                                                    <div class="time green">
                                                        <div class="timeBody hidden-xs">{{club.nom}}</div>
                                                        <div class="timeArrow hidden-xs"><span class="fa fa-caret-right"></span></div>
                                                        <div class="indicator"><span class="fa fa-circle-o"></span></div>
                                                        <div class="notifyArrow"><span class="fa fa-caret-left"></span></div>
                                                    </div>
                                                    <a href='{{path('show_club',{id:club.id})}}'>
                                                        <div class="notifyContent">
                                                            <div class="notifyBody">
                                                                <img class="avatar pull-left" src="{{asset(club.webPath)}}" alt="avatar">
                                                                <div class="col-md-3 pb20"> <div class=" pull-left">
                                                                        <div class="name">Dicipline<span class="label label-green visible-xs">Club</span></div>
                                                                        <div class="message">{{club.discpline}}</div>
                                                                    </div></div>
                                                                <div class="col-md-3 pb20"><div class=" pull-left">
                                                                        <div class="name">Créateur</div>
                                                                        <div class="message">{{club.createur.prenom}} {{club.createur.nom}}</div>
                                                                    </div></div>

                                                                <div class="col-md-3 pb20"><div class=" pull-left">
                                                                        <div class="name">Date Création</div>
                                                                        <div class="message">{{club.dateCreation|date('d/m/Y')}}</div>
                                                                    </div></div>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                        </div>
                                                    </a>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </ul>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
{% endblock %}

