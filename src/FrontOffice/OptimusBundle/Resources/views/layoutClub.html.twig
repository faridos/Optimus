{% extends "FrontOfficeOptimusBundle::layout.html.twig" %}

{% block body %}
    <div id="wrapper" >
        <div id="content" class="" >
            {% block content %}

            {% endblock %}

        </div>
        <div id="content" class="mob-max" style="overflow: hidden;height: 100%;">
            <div class="singleTop whiteBg eventcolor" style="height:100%">
                <div class="row mb20">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pb20">

                        <div class="userWidget-1">
                            <div class="avatar">
                                <img src="{{ asset(club.WebPath) }}" alt="avatar" class="clubufus">
                                {% if app.user == club.createur %} 
                                    <div class="ops">
                                        <a class="btn btn-round btn-default btn-sm" href="{{ path('club_update', {'id':club.id})}}" ><span class="fa icon-settings state"></span> <span class="state">Gérer</span></a>
                                        <a class="btn btn-round btn-default btn-sm" href="#supprimuss" data-toggle="modal"  ><span class="fa icon-trash state"></span> <span class="state">Supprimer</span></a>
                                    </div>
                                {% endif %}
                                <div class="name osLight fontus">{{ club.nom }}</div>
                            </div>
                            <div class="address starsus"><div class="cardRating">
                                    <span class="fa fa-star "></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star-o"></span></div>
                            </div>
                            <div class="title clubumus">Proprietaire :<span class="address detaillus">{{ club.createur }}</span></div>

                            <div class="row clubumus">
                                {% if app.user != club.createur %}
                                    <div class="col-md-6 pb20 cluboptimus" >
                                        <div class="pc-about osLight">
                                            {% set memberrequest = getMembreRequest(app.user,club) %}   
                                                {% if memberrequest is empty %}
                                                    <a class="btn btn-green btn-round eventus request" href="#" id="request_club">
                                                        <span class="fa icon-action-redo"></span> <span class="requestClub" id="{{club.id}}">Rejoindre</span>
                                                    </a>
                                                {% else %}
                                                    {% set memberconfirmed = getMembreConfirmed(app.user,club) %}
                                                        {% if memberconfirmed is empty %}
                                                            <a class="btn btn-green btn-round active eventus attente" href="#">
                                                                <span class="fa icon-action-redo "></span> <span class="requestAttente" >En attente</span>
                                                            </a>
                                                        {% else %}
                                                            <a class="btn btn-green btn-round eventus quitter" href="#" id="exit_club">
                                                                <span class="fa icon-action-redo "></span> <span class="exitClub" id="{{club.id}}">Quitter club</span>
                                                            </a>
                                                        {% endif %}
                                                        {% endif %}
                                                        </div>
                                                    </div>
                                                    {% endif %}
                                                        <div class="col-md-6">
                                                            <div class="pc-title osLight">
                                                                <div class="buttonsWrapper pb20 buttonleftus">  
                                                                    <a href="#" class="btn btn-icon btn-round btn-o btn-facebook">
                                                                        <span class="fa fa-facebook"></span>
                                                                    </a>
                                                                    <a href="#" class="btn btn-icon btn-round btn-o btn-twitter">
                                                                        <span class="fa fa-twitter"></span>
                                                                    </a>
                                                                    <a href="#" class="btn btn-icon btn-round btn-o btn-google">
                                                                        <span class="fa fa-google-plus"></span></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="clearfix"></div>
                                                </div>

                                                <div class="userWidget-2" >
                                                    <div class="avatar">

                                                    </div>
                                                    <div class="info">
                                                        <div class="row">
                                                            <div class="col-md-6 pb20">

                                                                <div class="pc-about osLight"><div class="title eventus">Déscription :<span class="address detaillus">{{ club.description }}</span></div>

                                                                </div>

                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="pc-title osLight"><div class="title eventus">Téléphone: <span class="address "> {{ club.createur.tel }}</span></div>
                                                                    <div class="title eventus">Email : <span class="address ">{{ club.createur.email }}</span></div>

                                                                </div>

                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="clearfix"></div>

                                                </div>




                                            </div>

                                        </div>
                                        <div id="mapView" class="eventmap" style="width:110%"><div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> Loading map...</div> </div><div class="clearfix"></div>
                                    </div>

                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <!------------------- modal supprission------------------->
                            <div class="modal fade" id="supprimuss" role="dialog" aria-labelledby="contactLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                            <h4 class="modal-title" id="contactLabel">Suppression </h4>
                                        </div>
                                        <div class="modal-body">

                                            <p>Souhaitez vous vraiment supprimer ce Club ?</p>


                                        </div>
                                        <div class="modal-footer">
                                            <button type="reset" data-dismiss="modal" value="Reset" class="btn btn-round btn-o btn-gray">Annuler</button>
                                            <a href="{{ path('club_delete',{'id': club.id}) }}" class="btn btn-round btn-green">Confirmer</a>



                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-------------------fin modal suppression-------------------> 
                            {% endblock %}

                              
