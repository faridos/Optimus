{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}:   {{ app.user.prenom }} {{ app.user.nom }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ app.user.email }}</p>
    {% if app.user.id != user.id %}
        {% if app.user | relation_exists('friendship', user ) %}
            {% set pendingInvitations = pendingInvitation(user,user1)%}
                {% if pendingInvitations is empty %}
                    <form action="{{ path('delete_relation', { 'id': user.id}) }}" method="post">
                        <button type="submit" class="btn btn-blue ">
                            Retirer
                        </button>
                    </form>
                {% else %}                    
                    <button type="submit" class="btn btn-blue">
                        Demande envoy√©e
                    </button> 
                {% endif %}

                {% else %}

                    <form action="{{ path('add_relation', { 'id': user.id}) }}" method="post">
                        <button type="submit" class="btn btn-blue btn-icon icon-left">
                            Ajouter
                            <i class="entypo-plus"></i>
                        </button>
                    </form>

                    {% endif %}
                        {% endif %}
