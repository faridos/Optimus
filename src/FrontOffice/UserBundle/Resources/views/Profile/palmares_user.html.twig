{% extends "FrontOfficeUserBundle::layout_profile.html.twig" %}
{% block content %}
    <div class="col-lg-12">
        <div class="row mb20"></div>
        <div class="col-lg-12">
            <div class="tabsContainer">
                <ul class="nav nav-tabs nav-justified" role="tablist">
                    <li class="">
                        <a href="{{ path('show_profil', { 'id' : user.id }) }}" >
                            <span class="icon-trophy"></span> Events
                        </a>
                    </li>
                    <li class="">
                        <a href="{{ path('club_user', { 'id' : user.id }) }}">
                            <span class="fa fa-users"></span> Clubs
                        </a>
                    </li>
                    <li class="">
                        <a href="{{ path('albums_user', { 'id' : user.id }) }}" >
                            <span class="icon-doc"></span> Albums
                        </a>
                    </li>
                    <li class="">
                        <a href="#videos" role="tab" data-toggle="tab">
                            <span class="icon-film"></span> Vid√©os
                        </a>
                    </li>
                    <li class="active">
                        <a href="{{ path('palmares_user', { 'id' : user.id }) }}" >
                            <span class="icon-badge"></span> Palmares
                        </a>
                    </li>
                </ul>
                <div class="tab-content">

                    <ul class="tab-pane fade active in scrollbar" id="palmares" > 
                        {% if app.user == user %}
                        <div class="buttonsWrapper col-xs-12">
                            <a class="btn btn-round btn-default btn-sm rightus" href="#uploadpalmares" data-toggle="modal" ><span class="fa icon-plus state"></span> <span class="state">Ajouter </span></a><br>
                        </div>
                        {% endif %}
                        {% for reward in rewards %}
                            <div class="row">
                                <br>
                                <div class="col-md-4" >
                                    <div data-linkto="" class="card albumus" >
                                        <br>
                                        <div class="profile-card">
                                            <div class="pc-avatar"><a href="#" class="btn btn-icon btn-round btn-o btn-pinterest palmaruss" ><span class="fa fa-child palmarus"></span></a></div>
                                            <div class="pc-name">{{ reward.titre }}</div>
                                        </div>
                                        <div align="center" >
                                            <a href="#" class="btn btn-icon btn-round btn-green btn-xs" title="modifier"><span class="icon-settings"></span></a>
                                            <a href="#" class="btn btn-icon btn-round btn-green btn-xs" title="supprimer"><span class="icon-trash"></span></a>
                                        </div>
                                        <br>

                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                                <div class="col-md-4" >
                                    <div data-linkto="" class="card albumus" >
                                        <br>
                                        <div class="profile-card">
                                            <div class="pc-avatar"><a href="#" class="btn btn-icon btn-round btn-o btn-pinterest palmaruss" ><span class="fa fa-star palmarus"></span></a></div>
                                            <div class="pc-name">{{ reward.classment }}</div>
                                        </div>
                                        <div align="center" >
                                            <a href="#" class="btn btn-icon btn-round btn-green btn-xs" title="modifier"><span class="icon-settings"></span></a>
                                            <a href="#" class="btn btn-icon btn-round btn-green btn-xs" title="supprimer"><span class="icon-trash"></span></a>
                                        </div>
                                        <br>

                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                                <div class="col-md-4" >
                                    <div data-linkto="" class="card albumus" >
                                        <br>
                                        <div class="profile-card">
                                            <div class="pc-avatar"><a href="#" class="btn btn-icon btn-round btn-o btn-pinterest palmaruss" ><span class="fa fa-calendar palmarus"></span></a></div>
                                            <div class="pc-name">{{ reward.date |date('Y-m-d')}}</div>
                                        </div>
                                        <div align="center" >
                                            <a href="#" class="btn btn-icon btn-round btn-green btn-xs" title="modifier"><span class="icon-settings"></span></a>
                                            <a href="#" class="btn btn-icon btn-round btn-green btn-xs" title="supprimer"><span class="icon-trash"></span></a>
                                        </div>
                                        <br>

                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--------------- upload palmares ------------------>
    <div class="modal fade" id="uploadpalmares" role="dialog" aria-labelledby="contactLabel" aria-hidden="true">
        <div class="modal-dialog">
             {{ render (controller('FrontOfficeOptimusBundle:Reward:addRewardUser',  { 'id': app.user.id })) }}
        </div>
    </div>


    <!--------------- fin upload  ------------------>
{% endblock %}




