{% extends "FrontOfficeOptimusBundle::layout.html.twig" %}
{% block  body %}
    <div id="wrapper">
        <div id="content" class="max">
            <div class="components">
                <h4>Paramètres</h4>
                <div class="row">
                    <div class="col-md-3">
                        <ol class="breadcrumb">
                            <ul class="notifyList nav">
                                <li class="active"><a href="#compte" class="notifyName" role="tab" data-toggle="tab"><span class="notifyIcon icon-settings"></span> Compte</a></li>
                                <li class=""><a href="#confid" class="notifyName" role="tab" data-toggle="tab"><span class="notifyIcon fa fa-unlock-alt"></span> Confidentialité</a></li>
                                <li class=""><a href="#notifications" class="notifyName" role="tab" data-toggle="tab"><span class="notifyIcon icon-bell"></span> Notifications</a></li>
                            </ul>
                        </ol>
                    </div>
                    <div class="col-md-9">
                        <div class="tabsContainer">
                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="compte">
                                    <table  id="example">
                                    </table>
                                    <table class="table table-striped table-bordered" id="example-2">
                                        <thead>
                                            <tr>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">Adresse Email</th>
                                                <td>{{ app.user.email }}</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Nom d'utilisateur</th>
                                                <td>{{ app.user.username }}</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">PWD</th>
                                                <td>{{ app.user.username }}</td>
                                            </tr>
                                            
                                        </tbody>
                                    </table>
                                 
                                </div>
                                <div class="tab-pane fade" id="confid">Confidentialité</div>
                                <div class="tab-pane fade" id="notifications">Notifications</div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
{% endblock %}
{% block javascriptfils %}
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="{{ asset('template/js/jquery.tabledit.js') }}" type="text/javascript"></script>
   <script>
                                      
                                        $('#example').Tabledit({
                                              
                                            editButton: false,
                                            removeButton: false,
                                            columns: {
                                                identifier: [0, 'id'],
                                                editable: [[1, 'First Name'], [2, 'Last Name'], [3, 'Username', '{"1": "@mdo", "2": "@fat", "3": "@twitter"}']]
                                            }
                                        });
                                        $('#example-2').Tabledit({
                                            columns: {
                                                identifier: [0, 'id'],
                                                editable: [[1, 'First'], [2, 'Last'], [3, 'Nickname', '{"1": "@mdo", "2": "@fat", "3": "@twitter"}']]
                                            }
                                        });
                                    </script>
