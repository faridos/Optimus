{% extends "FrontOfficeOptimusBundle::layout.html.twig" %}
{% block  body %}
    <div id="wrapper">
        <div id="content" class="max">
            <div class="components">
                <h4>Paramètres</h4>
                <div class="row">
                    <div class="col-md-3">
                        <ol class="breadcrumb">
                            <ul class="notifyList nav">
                                <li class=""><a href="{{ path('setting_user',{'id': app.user.id}) }}" class="notifyName" role="tab" ><span class="notifyIcon icon-settings"></span> Compte</a></li>
                                <li class=""><a href="{{ path('setting_user_confidentiality',{'id': app.user.id}) }}" class="notifyName" role="tab" ><span class="notifyIcon fa fa-unlock-alt"></span> Confidentialité</a></li>
                                <li class="active"><a href="{{ path('setting_user_notifications',{'id': app.user.id}) }}" class="notifyName" role="tab" ><span class="notifyIcon icon-bell"></span> Notifications</a></li>
                            </ul>
                        </ol>
                    </div>
                    <div class="col-md-9">
                        <div class="tabsContainer">
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="notifications">
                                    <div class="panel panel-default">
                                        <div class="panel-heading optimus">Notifications</div>
                                        <div class="panel-body">
                                            <form action="{{ path('setting_user_notifications', {'id' : entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal form-groups-bordered">
                                                {{ form_errors(edit_form) }}
                                                <div class="info">
                                                    <div class="notifyName demandus">
                                                        <span class="notifyName demandus col-md-2" style="top:13px">
                                                            <strong>Type de notification</strong>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="ops">
                                                    <div class="form-group col-md-6">
                                                        {{ form_widget(edit_form.type_notification) }}
                                                    </div>
                                                    <button style="margin:15px 0 0 20px" type="submit"  value="Submit" class="btn btn-round btn-green">Enregistrer</button>
                                                </div>
                                                <div class="clearfix"></div> 
                                                {{ form_widget(edit_form._token) }}
                                            </form>
                                        </div> 
                                    </div> 
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
{% endblock %}
{% block javascriptfils %} 
{% endblock %}
