{% extends "FrontOfficeUserBundle::layout.html.twig" %}
    {% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <div id="home-map" ></div>
    {% block fos_user_content %}
        <div class="home-caption" >
            <div class="home-subtitle" style=""><div  class="col-md-6 col-md-offset-3">
                    <div class="col-xs-12 ">
                        <div class="panel panel-default bordustopus">
                            <div class="panel-heading optimus bordusbottomus">Confirmation de compte Optimus</div><div class="panel-body">
                                <div class="bienvenus">
                                    <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                                    {% if app.session is not empty %}
                                        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
                                        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
                                        {% endif %}
                                </div>
                            </div>
                        </div>	
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('template/js/home.js') }}" type="text/javascript"></script>
{% endblock %}